/research/*
  Cache-Control: public, max-age=3600, s-maxage=86400
  X-Robots-Tag: index, follow

# Services page - enable crawler indexing
/services
  Cache-Control: public, max-age=3600, s-maxage=86400
  X-Robots-Tag: index, follow

# Static assets - long cache
/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

